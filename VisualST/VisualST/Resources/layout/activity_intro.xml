<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

	<android.support.v4.view.ViewPager
		android:id="@+id/slideViewPager"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/edited" />

    <TextView
		android:id="@+id/edited"
		android:layout_width="match_parent"
		android:layout_height="180dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin16"
        android:paddingRight="@dimen/margin16"
		android:layout_above="@+id/dotsLayout" />

	<LinearLayout
		android:id="@+id/dotsLayout"
		android:layout_width="match_parent"
		android:layout_height="55dp"
		android:gravity="center"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal" >

		<TextView
		    android:id="@+id/mDots0"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

		<TextView
		    android:id="@+id/mDots1"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

		<TextView
		    android:id="@+id/mDots2"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

        <TextView
		    android:id="@+id/mDots3"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

        <TextView
		    android:id="@+id/mDots4"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

        <TextView
		    android:id="@+id/mDots5"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

        <TextView
		    android:id="@+id/mDots6"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

        <TextView
		    android:id="@+id/mDots7"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:background="@drawable/circle" />

	</LinearLayout>

    <Button
		android:id="@+id/prevBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/margin16"
		android:paddingRight="@dimen/margin16"
		android:background="@drawable/button_shape"
		android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
		android:text="@string/back"
		android:textColor="@android:color/white"
		android:textSize="@dimen/text_size_norm" />

    <Button
		android:id="@+id/nextBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/margin16"
		android:paddingRight="@dimen/margin16"
		android:background="@drawable/button_shape"
		android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
		android:text="@string/next"
		android:textColor="@android:color/white"
		android:textSize="@dimen/text_size_norm" />

</RelativeLayout>