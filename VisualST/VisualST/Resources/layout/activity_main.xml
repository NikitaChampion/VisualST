<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/focusedLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="35dp"
				android:gravity="center"
				android:text="@string/st"
				android:textColor="@android:color/black"
				android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/visualizer"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/margin15"
				android:orientation="vertical"
				android:gravity="center">

                <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="horizontal"
				    android:gravity="center">

				    <TextView
					    android:id="@+id/t1"
					    android:layout_width="@dimen/text_width320"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

			    </LinearLayout>

                <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginTop="10dp"
				    android:orientation="horizontal"
				    android:gravity="center">

				    <TextView
					    android:id="@+id/t2"
					    android:layout_width="@dimen/text_width160"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t3"
					    android:layout_width="@dimen/text_width160"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

			    </LinearLayout>

			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginTop="10dp"
				    android:orientation="horizontal"
				    android:gravity="center">

				    <TextView
					    android:id="@+id/t4"
					    android:layout_width="@dimen/text_width80"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t5"
					    android:layout_width="@dimen/text_width80"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t6"
					    android:layout_width="@dimen/text_width80"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t7"
					    android:layout_width="@dimen/text_width80"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

			    </LinearLayout>

			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginTop="10dp"
				    android:orientation="horizontal"
				    android:gravity="center">

					<TextView
						android:id="@+id/t8"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
						android:background="@drawable/rectangle_gray"
						android:gravity="center"
					    android:textColor="@android:color/black"
						android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t9"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t10"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t11"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t12"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t13"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t14"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

				    <TextView
					    android:id="@+id/t15"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:background="@drawable/rectangle_gray"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

			    </LinearLayout>

			</LinearLayout>
            
			<LinearLayout
				android:id="@+id/array"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="25dp"
				android:orientation="horizontal"
				android:gravity="center">

				<TextView
					android:id="@+id/arr0"
					android:layout_width="40dp"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

				<TextView
					android:id="@+id/arr1"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

				<TextView
					android:id="@+id/arr2"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

				<TextView
					android:id="@+id/arr3"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

				<TextView
					android:id="@+id/arr4"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

				<TextView
					android:id="@+id/arr5"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

				<TextView
					android:id="@+id/arr6"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

				<TextView
					android:id="@+id/arr7"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:background="@drawable/rectangle_white"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_size" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="20dp"
				android:orientation="horizontal"
				android:gravity="left">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:text="@string/elements"
					android:textSize="23sp" />

				<EditText
					android:id="@+id/arrayElements"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="@string/array_elements"
					android:maxLines="1"
					android:lines="1"
					android:maxLength="1"
					android:inputType="number"
					android:imeOptions="actionDone"
					android:gravity="center" />
                
			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="horizontal"
				    android:gravity="right">

                    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="20dp"
					    android:layout_marginRight="5dp"
				        android:text="Answer:"
				        android:textSize="23sp" />

				    <TextView
					    android:id="@+id/answer"
					    android:layout_width="@dimen/text_width40"
					    android:layout_height="@dimen/tv_height"
					    android:layout_marginRight="20dp"
					    android:background="@drawable/rectangle_white"
					    android:gravity="center"
					    android:textColor="@android:color/black"
					    android:textSize="@dimen/text_size" />

			    </LinearLayout>

			</LinearLayout>

			<TextView
				android:id="@+id/TvDelay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:gravity="center"
				android:text="@string/sec"
				android:textSize="19sp" />

			<SeekBar
				android:id="@+id/SbDelay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
                android:progressTint="@android:color/black"
                android:thumbTint="@android:color/black"
				android:min="100"
				android:max="4000"
				android:progress="1250" />

            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:gravity="center">

				<TextView
					android:id="@+id/previous"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:layout_marginLeft="20dp"
					android:background="@drawable/previous"
                    android:clickable="true"
					android:gravity="center" />

				<TextView
					android:id="@+id/stop"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:layout_marginLeft="5dp"
					android:background="@drawable/stop"
                    android:clickable="true"
					android:gravity="center" />

				<TextView
					android:id="@+id/continue_"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:layout_marginLeft="5dp"
					android:background="@drawable/continue_"
                    android:clickable="true"
					android:gravity="center" />

				<TextView
					android:id="@+id/next"
					android:layout_width="@dimen/text_width40"
					android:layout_height="@dimen/tv_height"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="20dp"
					android:background="@drawable/next"
                    android:clickable="true"
					android:gravity="center" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/margin15"
				android:orientation="horizontal"
				android:gravity="center">

				<Button
					android:id="@+id/generate"
					style="@android:style/Widget.Holo.Light.Button.Toggle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:paddingLeft="@dimen/margin16"
					android:paddingRight="@dimen/margin16"
					android:background="@drawable/button_shape"
					android:gravity="center"
					android:text="@string/generate"
					android:textColor="@android:color/white"
					android:textSize="22sp" />

				<Button
					android:id="@+id/build"
					style="@android:style/Widget.Holo.Light.Button.Toggle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin15"
					android:layout_marginRight="20dp"
					android:paddingLeft="24dp"
					android:paddingRight="24dp"
					android:background="@drawable/button_shape"
					android:gravity="center"
					android:text="@string/build"
					android:textColor="@android:color/white"
					android:textSize="22sp" />

			</LinearLayout>
            

            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/margin15"
				android:orientation="horizontal"
				android:gravity="center">
                
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin16"
					android:layout_weight="1">

                    <EditText
                        android:id="@+id/left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/left"
                        android:maxLines="1"
                        android:lines="1"
                        android:maxLength="1"
                        android:inputType="number"
                        android:imeOptions="actionNext" />
                    
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
					android:layout_weight="1">

                    <EditText
                        android:id="@+id/right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/right"
                        android:maxLines="1"
                        android:lines="1"
                        android:maxLength="1"
                        android:inputType="number"
                        android:imeOptions="actionDone" />

                </android.support.design.widget.TextInputLayout>

                <Button
					android:id="@+id/compute"
					style="@android:style/Widget.Holo.Light.Button.Toggle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin15"
					android:layout_marginRight="20dp"
					android:paddingLeft="@dimen/margin16"
					android:paddingRight="@dimen/margin16"
					android:background="@drawable/button_shape"
					android:gravity="center"
					android:text="@string/compute"
					android:textColor="@android:color/white"
					android:textSize="22sp" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/margin15"
				android:orientation="horizontal"
				android:gravity="center">

			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin16"
				    android:text="a("
				    android:textSize="30sp" />

				<EditText
					android:id="@+id/position"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint="@string/i"
					android:maxLines="1"
					android:lines="1"
					android:maxLength="1"
					android:inputType="number"
					android:imeOptions="actionNext"
					android:gravity="center" />

			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text=") ="
				    android:textSize="30sp" />

				<EditText
					android:id="@+id/x"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:hint="@string/x"
					android:maxLines="1"
					android:lines="1"
					android:maxLength="3"
					android:inputType="number"
					android:imeOptions="actionDone"
					android:gravity="center" />

				<Button
					android:id="@+id/update"
					style="@android:style/Widget.Holo.Light.Button.Toggle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:paddingLeft="24dp"
					android:paddingRight="24dp"
					android:background="@drawable/button_shape"
					android:gravity="center"
					android:text="@string/update"
					android:textColor="@android:color/white"
					android:textSize="22sp" />

			</LinearLayout>
            
            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="40dp"
				android:orientation="horizontal">

			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin16"
				    android:text="@string/groupoid_elements"
				    android:textSize="19sp" />

                <TextView
				    android:id="@+id/number"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/margin16"
				    android:text="@string/zero"
					android:textColor="@android:color/black"
				    android:textSize="@dimen/text_size" />

			</LinearLayout>

            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:gravity="center">

				<Button
					android:id="@+id/generate_groupoid"
					style="@android:style/Widget.Holo.Light.Button.Toggle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin15"
					android:paddingLeft="@dimen/margin16"
					android:paddingRight="@dimen/margin16"
					android:background="@drawable/button_settings"
					android:gravity="center"
					android:text="@string/generate_groupoid"
					android:textColor="@android:color/black"
					android:textSize="21sp" />
            
			</LinearLayout>

            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:gravity="center">
                
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin16"
					android:layout_weight="0.6">

                    <!-- Длина 3, android:singleLine="true" по умолчанию-->
                    <EditText
                        android:id="@+id/module"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/module"
                        android:maxLines="1"
                        android:lines="1"
                        android:maxLength="3"
                        android:inputType="number"
                        android:imeOptions="actionNext" />
                    
                </android.support.design.widget.TextInputLayout>
                
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
					android:layout_weight="0.8">

                    <EditText
                        android:id="@+id/operation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/operation"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/margin16"
					android:layout_weight="1">

                    <EditText
                        android:id="@+id/generating_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/generating_set"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:imeOptions="actionDone" />

                </android.support.design.widget.TextInputLayout>

			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin15"
				android:gravity="center"
				android:text="@string/checks"
				android:textColor="@android:color/black"
				android:textSize="22sp" />

            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="5dp"
				android:orientation="horizontal"
				android:gravity="center">

				<Button
					android:id="@+id/associative"
					style="@android:style/Widget.Holo.Light.Button.Toggle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:paddingLeft="@dimen/margin16"
					android:paddingRight="@dimen/margin16"
					android:background="@drawable/button_settings"
					android:gravity="center"
					android:text="@string/associative"
					android:textColor="@android:color/black"
					android:textSize="21sp" />

				<Button
					android:id="@+id/neutral"
					style="@android:style/Widget.Holo.Light.Button.Toggle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin15"
					android:layout_marginRight="20dp"
					android:paddingLeft="@dimen/margin16"
					android:paddingRight="@dimen/margin16"
					android:background="@drawable/button_settings"
					android:gravity="center"
					android:text="@string/neutral"
					android:textColor="@android:color/black"
					android:textSize="21sp" />

			</LinearLayout>

		</LinearLayout>

    </ScrollView>
</RelativeLayout>